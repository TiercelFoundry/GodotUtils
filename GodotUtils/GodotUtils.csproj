<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Godot Utils - Tiercel Foundry</Title>
    <Authors>Tiercel Foundry, Grahame Watt</Authors>
    <Description>Useful utilities for Godot 4</Description>
    <Company>Tiercel Foundry</Company>
    <PackageIcon>tf_bird_blue.png</PackageIcon>
    <PackageProjectUrl>https://github.com/TiercelFoundry/Utils</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TiercelFoundry/Utils</RepositoryUrl>
    <Copyright>Tiercel Foundry</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageId>TiercelFoundry.$(AssemblyName)</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\public\tf_bird_blue.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GodotSharp" Version="4.2.2" />
  </ItemGroup>

</Project>
